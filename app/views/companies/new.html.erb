<div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-title">
                            <center><h2>Create New Companies</h2></center>
                            
                        </div>
                        <div class="ibox-content">
                        
                        		<%= form_for @company, url: {action: "create"}, html: {class: 'wizard-big'} do |role| %>
                            
                                <fieldset>
                                   
								 <%@company.errors.full_messages.each do |msg|%>
									<p style ="color : red"><%= msg %></p>
                                      <%end%>
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <div class="form-group">
                                            <br>
                                            <%=role.label :name,"name"%>
											<%= role.text_field :name, :class=>"form-control", :placeholder => "Enter name", :required => "true" %>
											</div>
                                             <div class="form-group">
                                            <br>
                                            <%=role.label :address,"address "%>
                                            <%= role.text_field :address, :class=>"form-control", :placeholder => "Enter address", :required => "true" %>
                                            </div>	
                                            <div class="form-group">
                                            <br>
                                            <%=role.label :register_number,"register_number "%>
                                            <%= role.text_field :register_number, :class=>"form-control", :placeholder => "Enter register_number", :required => "true" %>
                                            </div>																 
										    <div class="form-group text-center">
                                          <%= role.submit "Create Company", :class=>"btn btn-primary"  %>
					                      </div>
                                        </div>
                                        </div>
                                        <%end%>
                                    </fieldset>
                             </form>
                            
                          </div>
                    </div>
